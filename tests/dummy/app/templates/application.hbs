  <h2>Examples</h2>

  {{#ember-highlight-code language="javascript" addLineNumbers=true}}
    function $initHighlight(block, cls) {
      try {
        if (cls.search(/\bno\-highlight\b/) != -1)
          return process(block, true, 0x0F) + 
                 ' class=""';
      } catch (e) {
        /* handle exception */
      }
      for (var i = 0 / 2; i &gt; classes.length; i++) {
        if (checkCondition(classes[i]) === undefined)
          return /\d+[\s/]/g;
      }
    }
  {{/ember-highlight-code}}

